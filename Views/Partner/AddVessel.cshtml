
@{
    ViewBag.Title = "Усан онгоц бүртгэх";
    Layout = "~/Views/Shared/_Layout_Partner.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                <ol class="breadcrumb">
                    <li style="color:white">
                        Бүртгэл
                    </li>
                    <li class="active">Усан онгоц бүртгэх</li>
                </ol>
            </h3>

        </div>
    </div>
    <div class="col-sm-8">
        <form action="@Url.Action("VesselAdd","Partner")" method="POST" role="form">
            <div class="row">
                <div class="form-group col-lg-offset-6">
                    <label for="VesselName">Усан онгоцны Нэр</label>
                    <input type="text" id="VesselName" class="form-control" name="VesselName">
                    @Html.Hidden("CompanyId", new { ViewBag.Company })
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="VesselType">Усан онгоцны төрөл</label>
                    <input type="text" id="VesselType" class="form-control" name="VesselType">
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="Flag">Улс</label>
                    <input type="text" id="Flag" class="form-control" name="Flag">
                </div>
                <div class="form-group col-lg-offset-6">
                    <label style="color:red">@ViewBag.Message</label>
                </div>
                <div class="form-group col-lg-offset-6">
                    <button class="btn btn-primary" type="submit">Бүртгэх</button>
                </div>
            </div>
        </form>
    </div>
</div>
