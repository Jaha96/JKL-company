
@{
    ViewBag.Title = "RegisterCompany";
    Layout = "~/Views/Shared/_Layout_JKL.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                <ol class="breadcrumb">
                    <li style="color:white">
                        Бүртгэл
                    </li>
                    <li class="active">Компани бүртгэх</li>
                </ol>
            </h3>

        </div>
    </div>
    <div class="col-sm-8">
        <form action="@Url.Action("CompanyAdd","JKL")" method="POST" role="form">
            <div class="row">
                <div class="form-group col-lg-offset-6">
                    <label for="CompanyName">Компаны Нэр</label>
                    <input type="text" id="CompanyName" class="form-control" name="CompanyName">
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="ContactPerson">Холбогдох хүн</label>
                    <input type="text" class="form-control" id="ContactPerson" name="ContactPerson" />
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="Email">Мэйл хаяг</label>
                    <input type="text" class="form-control" id="Email" name="Email" />
                   </div>
                <div class="form-group col-lg-offset-6">
                    <label for="Phone">Утасны дугаар</label>
                    <input type="text" id="Phone" class="form-control" name="Phone">
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="Address">Хаяг</label>
                    <input type="text" id="Address" class="form-control" name="Address">
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="Password">Нууц үг</label>
                    <input type="password" id="Password" class="form-control" name="Password">
                </div>
                <div class="form-group col-lg-offset-6">
                    <label style="color:red">@ViewBag.Message</label>
                </div>
                <div class="form-group col-lg-offset-6">
                    <button class="btn btn-primary" type="submit">Бүртгэх</button>
                </div>
            </div>
        </form>
    </div>
</div>