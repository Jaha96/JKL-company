@model JKLSite.Models.Company
@{
    ViewBag.Title = "Компани бүртгэх";
    Layout = "~/Views/Shared/_Layout_JKL.cshtml";
    string HeaderText= "Компани бүртгэх";
    string submitText = "Бүртгэх";
    if (Model!=null)
    {
        if(Model.Type=="2")
        {
            HeaderText = "Компани засах";
            submitText = "Засах";
        }
    }
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                <ol class="breadcrumb">
                    <li style="color:white">
                        Бүртгэл
                    </li>
                    <li class="active">@HeaderText</li>
                </ol>
            </h3>

        </div>
    </div>
@using (Html.BeginForm())
{
    <div class="col-sm-8">
        
            <div class="row">

                <div class="form-group col-lg-offset-6">
                    <label style="color:red">@ViewBag.Message</label>
                    <label style="color:red">@ViewBag.ErrorMessage</label>
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="CompanyName">Компаны Нэр</label>
                    @Html.TextBoxFor(a=>a.CompanyName, new { @class = "form-control" })
                    @Html.HiddenFor(a=>a.CompanyId)
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="ContactPerson">Холбогдох хүн</label>
                    @Html.TextBoxFor(a=>a.ContactPerson,new { @class="form-control"})
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="Email">Мэйл хаяг</label>
                    @Html.TextBoxFor(a=>a.Email, new { @class = "form-control" })
                   </div>
                <div class="form-group col-lg-offset-6">
                    <label for="Phone">Утасны дугаар</label>
                    @Html.TextBoxFor(a=>a.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="Address">Хаяг</label>
                    @Html.TextBoxFor(a=>a.Address, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-offset-6">
                    <label for="Password">Нууц үг</label>
                    @Html.PasswordFor(a=>a.Password, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-offset-6">
                    <button class="btn btn-primary" type="submit">@submitText</button>
                </div>
            </div>
        
    </div>
}
</div>