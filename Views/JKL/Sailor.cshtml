
@{
    ViewBag.Title = "Sailor";
    Layout = "~/Views/Shared/_Layout_JKL.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                <ol class="breadcrumb">
                    <li style="color:white">
                        Мэдээллийн удирдлага
                    </li>
                    <li class="active">Далайчдын жагсаалт</li>
                </ol>
            </h3>

        </div>
    </div>
    <div class="col-sm-12">
        @ViewBag.ErrorMessage
            <table width="100%" class="table table-hover">
                <tr style="background-color:black">
                    <th>
                        Далайчны ID
                    </th>
                    <th>
                        Далайчны нэр
                    </th>
                    <th>
                        Төрсөн огноо
                    </th>
                    <th>
                        Гэр бүлийн байдал
                    </th>
                    <th>
                        Хаяг
                    </th>
                    <th>
                        Өндөр
                    </th>
                    <th>
                        Жин
                    </th>
                    <th>
                        Цусны төрөл
                    </th>
                    <th>
                        Гуталны размер
                    </th>
                    <th>
                        Ажлын статус
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                <tr>
                    <td>
                        @Model[i].ItemArray[0]
                    </td>
                    <td>
                        @Model[i].ItemArray[1]
                    </td>
                    <td>
                        @Model[i].ItemArray[2].Date.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @Model[i].ItemArray[3]
                    </td>
                    <td>
                        @Model[i].ItemArray[4]
                    </td>
                    <td>
                        @Model[i].ItemArray[5]
                    </td>
                    <td>
                        @Model[i].ItemArray[6]
                    </td>
                    <td>
                        @Model[i].ItemArray[7]
                    </td>
                    <td>
                        @Model[i].ItemArray[8]
                    </td>
                    <td>
                        @Model[i].ItemArray[9]
                    </td>
                    <td>
                        @Html.ActionLink("Засах", "EditSailor", new { id = Model[i].ItemArray[0] })
                    </td>
                    <td>
                        @Html.ActionLink("Устгах", "DeleteSailor", new { id = Model[i].ItemArray[0] })
                    </td>
                </tr>
                }
                <tr>
                    <td>
                        @Html.ActionLink("Шинээр нэмэх", "AddSailor")
                    </td>
                </tr>
            </table>
        
        


    </div>
</div>

